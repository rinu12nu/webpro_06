<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>ブキ一覧表示</title>
</head>
<body>
  <h2>ブキの詳細</h2>
  <table>
    <tr><th>ID</th><th>ブキ名</th></tr>
      <% let number = 0 %>
      <% for( let row of data ) { %>
        <tr><td><%= row.id %></td>
        <td><a href="/spl/<%= number %>"><%= row.name %></a></td>
        <% number += 1 %>
      <% } %>
  </table>
  <form action="/spl/random" method="POST">
    <button type="submit">おすすめ</button>
  </form>
  <% if(typeof randomresult !== 'undefined') { %>
    <p>おすすめは<%= randomresult %>です．</p>
  <% } %>
  
  <a href="/spl/create">追加</a>
</body>
</html>